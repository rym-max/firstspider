{
    "spider": "templateEin",
    "website": "https://www.bundesregierung.de/breg-de",
    "type": "新闻",
    "index": "https://www.bundesregierung.de/breg-de",
    "settings": {
        "USER_AGENT": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_6) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/60.0.3112.90 Safari/537.36",
        "ITEM_PIPELINES":{
            "universalspider.pipelines.NewsSpiderPipeline": 300
         },
     "DOWNLOAD_DELAY": 1
    },
    "start_urls": {
        "type": "dynamic",
        "method": "from_re",
        "args":{
			"re_rule":["initialSearchResultsJson.*(https://.*?)\\\".*;"],
			"url":"https://www.bundesregierung.de/breg-de/aktuelles#/"
		}
    },
    "allowed_domains": [
        "bundesregierung.de"
    ],
    "core_words":["中德","德国"],
    "language":"GERMAN",
    "filter_all":0,
    "need_text":0,
    

    "table":"news",

    "rules": "bunde",
    "item": {
        "class": "NewsItem",
        "loader": "NewsLoader",
        "attrs": {
            "title":[
                {
                    "method": "xpath",
                    "args": [
                        "//title/text()"
					],
					"re":"| .+? | (.*)"
                }
            ],
            "url":[
                {
                    "method": "attr",
                    "args": [
                        "url"
                    ]
                }
            ],
            "keywords":[
                {
                    "method": "xpath",
                    "args":[
                        "//meta[@http-equiv='keywords']/@content"
                    ]
                }
            ],
            "text":[
                {
                    "method":"xpath",
                    "args": [
                        "//div[@class='bpa-richtext']//p//text()"
                    ]
                }
            ],
            "datetime":[
                {
                    "method": "xpath",
                    "args":[
						"//time/@datetime"
					],
					"re":"\\d+-\\d+-\\d"
                }
            ],
            "source":[
                {
                    "method": "xpath",
                    "args": [
                        "//div[@class='vibox']//div[@class='time']//span[@id='myDocsource1']/text()"
                    ]
                }
            ],
            "author":[
                {
                    "method":"xpath",
                    "args":[
                        "//meta[@name='author']/@content"
                    ]
                }
            ],
            "category":[
                {
                    "method":"xpath",
                    "args":[
                        "//div[@class='nav']/a[last()]/text()"
                    ]
                }
            ]
        }
    }
}