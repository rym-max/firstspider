    "table":"news",

    "rules": "fmprc",
    "item": {
        "class": "NewsItem",
        "loader": "NewsLoader",
        "attrs": {
            "title":[
                {
                    "method": "xpath",
                    "args": [
                        "//div[@class='title']/text()"
                    ]
                }
            ],
            "url":[
                {
                    "method": "attr",
                    "args": [
                        "url"
                    ]
                }
            ],
            "keywords":[
                {
                    "method": "xpath",
                    "args":[
                        "//meta[@http-equiv='keywords']/@content"
                    ]
                }
            ],
            "text":[
                {
                    "method":"xpath",
                    "args": [
                        "//div[@class='content']//p//text()"
                    ]
                }
            ],
            "datetime":[
                {
                    "method": "xpath",
                    "args":[
                        "//div[@class='vibox']//div[@class='time']//span[@id='News_Body_Time']/text()"
                    ]
                }
            ],
            "source":[
                {
                    "method": "xpath",
                    "args": [
                        "外交部"
                    ]
                }
            ],
            "author":[
                {
                    "method":"xpath",
                    "args":[
                        "//meta[@name='author']/@content"
                    ]
                }
            ],
            "category":[
                {
                    "method":"xpath",
                    "args":[
                        "//div[@class='nav']/a[last()]/text()"
                    ]
                }
            ]
        }
    }
