{
    "spider": "templateEin",
    "website": "教育部",
    "type": "新闻",
    "index": "http://www.moe.gov.cn/",
    "settings": {
        "USER_AGENT": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_6) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/60.0.3112.90 Safari/537.36",
        "ITEM_PIPELINES":{
            "universalspider.pipelines.NewsSpiderPipeline": 300
        },
        "REFERER":"http://www.moe.gov.cn",
        "DOWNLOAD_DELAY": 1
    },
    "start_urls": {
        "type": "dynamic",
        "method": "frompage",
        "args":{
            "forma_page":[
                ["http://www.moe.gov.cn/jyb_sy/sy_jyyw/index.html",[]],["http://www.moe.gov.cn/jyb_sy/sy_jyyw/index_%d.html",[1,2]],
                ["http://www.moe.gov.cn/jyb_xwfb/gzdt_gzdt/index.html",[]],["http://www.moe.gov.cn/jyb_xwfb/gzdt_gzdt/index_%d.html",[1,2]]
            ]
        }
    },
    "allowed_domains": [
        "moe.gov.cn"
    ],
    "core_words":["中德","德国"],
    "language":"CHINESE",
    "filter_all":0,
    "need_text":0,
    

    "table":"peoplenewstest",

    "rules": "most",
    "item": {
        "class": "NewsItem",
        "loader": "NewsLoader",
        "attrs": {
            "title":[
                {
                    "method": "xpath",
                    "args": [
                        "//title/text()"
                    ],
                    "re" : "(.*?) - "
                }
            ],
            "url":[
                {
                    "method": "attr",
                    "args": [
                        "url"
                    ]
                }
            ],
            "keywords":[
                {
                    "method" :"xpath",
                    "args":[
                        "//meta[@name='keywords']/@content"
                    ]
                }
            ],
            "text":[
                {
                    "method":"xpath",
                    "args": [
                        "//div[@class='TRS_Editor']//p//text()"
                    ]
                }
            ],
            "datetime":[
                {
                    "method": "xpath",
                    "args":[
                        "//meta[@name='publishdate']/@content"
                    ]
                }
            ],
            "source":[
                {
                    "method": "value",
                    "args": [
                        "教育部"    
                    ]
                }
            ],
            "author":[
                {
                    "method":"xpath",
                    "args":[
                        "//meta[@name='author']/@content"
                    ]
                }
            ]
        }
    }
}