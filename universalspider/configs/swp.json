{
    "spider": "templateEin",
    "website": "https://www.swp-berlin.org/",
    "type": "智库",
    "index": "https://www.swp-berlin.org/",
    "settings": {
        "USER_AGENT": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_6) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/60.0.3112.90 Safari/537.36",
        "ITEM_PIPELINES":{
            "universalspider.pipelines.NewsSpiderPipeline": 300
         },
     "DOWNLOAD_DELAY": 1
    },
    "start_urls": {
		"type": "static",
		"value":["https://www.swp-berlin.org/publikationen/","https://www.swp-berlin.org/kurz-gesagt/"]
    },
    "allowed_domains": [
        "swp-berlin.org"
    ],
    "core_words":["中德","德国"],
    "language":"GERMAN",
    "filter_all":0,
    "need_text":0,
    

    "table":"news",

    "rules": "swp",
    "item": {
        "class": "NewsItem",
        "loader": "NewsLoader",
        "attrs": {
            "title":[
                {
                    "method": "xpath",
                    "args": [
                        "//title/text()"
					]
                }
            ],
            "url":[
                {
                    "method": "attr",
                    "args": [
                        "url"
                    ]
                }
            ],
            "keywords":[
                {
                    "method": "xpath",
                    "args":[
                        "//meta[@name='keywords']/@content"
                    ]
                }
            ],
            "text":[
                {
                    "method":"xpath",
                    "args": [
                        "//div[contains(@class,'main-content-left')]//p//text()"
                    ]
                }
            ],
            "datetime":[
                {
                    "method": "xpath",
                    "args":[
						"//p[@class='csc-header-date']/text()"
					],
					"re":"\\d+\\.\\d+\\.\\d+"
                }
            ],
            "source":[
                {
                    "method": "value",
                    "args": [
                        "swp-berlin"
                    ]
                }
            ],
            "author":[
                {
                    "method":"xpath",
                    "args":[
                        "//link[@rel='author']/@title"
                    ]
                }
            ],
            "category":[
                {
                    "method":"xpath",
                    "args":[
                        "//div[@class='nav']/a[last()]/text()"
                    ]
                }
            ]
        }
    }
}