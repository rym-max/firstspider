{
    "spider": "templateEin",
    "website": "光明网",
    "type": "新闻",
    "index": "http://www.gmw.cn",
    "settings": {
        "USER_AGENT": "Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:64.0) Gecko/20100101 Firefox/64.0",
		"ITEM_PIPELINES":{
            "universalspider.pipelines.NewsSpiderPipeline": 300
         },
     "DOWNLOAD_DELAY": 1
    },
    "start_urls": {
		"case": 1,
        "Kwargs":{
            "pageargs":[
                {
                    "formatter":"http://world.gmw.cn/node_4661.htm"
                },
                {
                    "formatter":"http://world.gmw.cn/node_4485.htm"
                },
                {
                    "formatter":"http://world.gmw.cn/node_24179.htm"
                },
                {
                    "formatter":"http://world.gmw.cn/node_4660.htm"
                },
                {
                    "formatter":"http://world.gmw.cn/node_4696.htm"
                },
                {
                    "formatter":"http://world.gmw.cn/node_4661_%(number)s.htm",
                    "pages":[2,0.6,10,0]
                },
                {
                    "formatter":"http://world.gmw.cn/node_4485_%(number)s.htm",
                    "pages":[2,0.033,10,0]
                },
                {
                    "formatter":"http://world.gmw.cn/node_24179_%(number)s.htm",
                    "pages":[2,0.0027,3,0]
                },
                {
                    "formatter":"http://world.gmw.cn/node_4660_%(number)s.htm",
                    "pages":[2,0.02,10,0]
                },
                {
                    "formatter":"http://world.gmw.cn/node_4696_%(number)s.htm",
                    "pages":[2,0.0012,10,0]
                }
            ]
        },
        "need_process":0
    },
    "allowed_domains": [
        "gmw.cn"
    ],
    "timezone":8,
    "core_words":["中德","德国"],
    "language":"CHINESE",
    "filter_all":0,
    "filter_depth":3,
    "need_text":0,
    "daylimit":"4,10,16",
    "date_formatter":["%Y-%m-%d"],


    "table":"data",

    "rules": "gmw",
    "item": {
        "class": "NewsItem",
        "loader": "NewsLoader",
        "attrs": {
            "title":[
                {
                    "method": "xpath",
                    "args": [
                        "//title/text()"
                    ]
                }
            ],
            "url":[
                {
                    "method": "attr",
                    "args": [
                        "url"
                    ]
                }
            ],
            "keywords":[
                {
                    "method": "xpath",
                    "args":[
                        "//meta[@name='keywords']/@content"
                    ]
                }
            ],
            "text":[
                {
                    "method":"xpath",
                    "args": [
                        "//div[@id='articleBox']//div[@class='u-mainText']//p//text()"
                    ]
                }
            ],
            "datetime":[
                {
                    "method": "xpath",
                    "args":[
                        "//meta[@name='publishdate']/@content"
                    ]
                }
            ],
            "source":[
                {
                    "method":"value",
                    "args":[
                        "光明网"
					]
                }
            ],
            "author":[
                {
                    "method":"xpath",
                    "args":[
                        "//meta[@name='author']/@content"
                    ]
                }
            ],
            "category":[
                {
                    "method" : "xpath",
                    "args" : [
                        "//div[@class='m-crumbs']/a[last()]/text()"
                    ]
                }
            ]
        }
    }
}