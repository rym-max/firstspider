{
    "spider": "templateEin",
    "website": "同济新闻网",
    "type": "新闻",
    "index": "http://news.tongji.edu.cn",
    "settings": {
        "USER_AGENT": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_6) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/60.0.3112.90 Safari/537.36",
        "ITEM_PIPELINES":{
               "universalspider.pipelines.NewsSpiderPipeline": 300
            },
        "DOWNLOAD_DELAY": 1
    },
    "start_urls": {
        "type": "static",
        "value": ["http://news.tongji.edu.cn/classid-17.html"]
    },
    "allowed_domains": [
        "tongji.edu.cn"
    ],
    "core_words":[""],
    "filter_all":0,
    "need_text":0,
    

    "rules": "tongji_news",
    "item": {
        "class": "NewsItem",
        "loader": "NewsLoader",
        "attrs": {
            "title":[
                {
                    "method": "xpath",
                    "args": [
                        "//div[@id='content']//h1[@class='news_title']/text()"
                    ]
                }
            ],
            "url":[
                {
                    "method": "attr",
                    "args": [
                        "url"
                    ]
                }
            ],
            "text":[
                {
                    "method": "xpath",
                    "args": [
                        "//div[@class='news_content']//text()"
                    ]
                }
            ],
            "datetime":[
                {
                    "method": "xpath",
                    "args": [
                        "//div[@class='news_info']//text()"
                    ],
                    "re": "(\\d+/\\d+/\\d+)"
                }
            ],
            "source":[
                {
                    "method": "xpath",
                    "args": [
                        "//div[@class='news_info']//text()"
                    ],
                    "re": "来源：(.*?)\\s"
                }
            ]
        }
    }
}